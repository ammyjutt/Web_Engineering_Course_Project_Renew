<section id="my-cards-section">


    <div class="container">
        <div class="row header">
            <div class="col text-center">
                <div class="h1 mb-5">Cutting-Edge Products</div>
            </div>
        </div>
    </div>



    <div class="container">
        <div class="row">

            @for (int i=Model.Count-1; i>=0; i--)
            {
                <div class="col-3">
                    <a asp-action="ShowSpecificProduct" asp-route-id="@Model[i].Id">
                        <div class="mycard text-center">
                            <div class="card-img-div">
                                <img src="@Url.Content(Model[i].CoverPhotoPath)"
                                     class="img-fluid card-img"
                                     alt="" />
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@Model[i].GameTitle</h5>
                                <button type="button" class="btn btn-success">
                                    <i class="fa-solid fa-lg fa-dollar-sign"></i> @Model[i].Price
                                </button>
                                <a href="#" class="btn btn-secondary card-cart-button">
                                    <i class="fa-regular fa-heart"></i>
                                </a>
                                <a href="#" class="btn btn-secondary">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </a>
                            </div>
                        </div>
                    </a>
                </div>
            }

        </div>
    </div>

    


</section>



