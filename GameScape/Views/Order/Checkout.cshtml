@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="This is a login page template based on Bootstrap 5">
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<body>
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="text-center my-5">
                        <h4 style="color:green"> GameScape</h4>
                    </div>
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            <h1 class="fs-4 card-title fw-bold mb-4 text-center">User Information</h1>
                            <form method="post" action="OrderPlaced" class="needs-validation" novalidate="" autocomplete="off">
    

                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="address">Shipping Address</label>
                                    <input id="address" type="input" class="form-control" name="address" required>
                                    <div class="invalid-feedback">
                                        Shipping Address is required
                                    </div>
                                </div>

       
                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="PostalCode">PostalCode</label>
                                    <input id="PostalCode" type="input" class="form-control" name="PostalCode" required>
                                    <div class="invalid-feedback">
                                        PostalCode is required
                                    </div>
                                </div>


                                <div>

                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div data-mdb-input-init class="form-outline">
                                            <label class="form-label" for="typeText">Card Number</label>

                                            <input name="cardNo" type="text" id="typeText" class="form-control form-control-lg" size="17"
                                                   placeholder="1234 5678 9012 3457" minlength="19" maxlength="19" />
                                        </div>
                                    </div>

                                    

                                    <div class="d-flex justify-content-between align-items-center pb-2">
                                        <div data-mdb-input-init class="form-outline">
                                            <label class="form-label" for="typeExp">Expiration</label>

                                            <input name="exp" type="text" id="typeExp" class="form-control form-control-lg" placeholder="MM/YYYY"
                                                   size="7" id="exp" minlength="7" maxlength="7" />
                                        </div>

                                        <div data-mdb-input-init class="form-outline">
                                            <label class="form-label" for="typeExp">CVV</label>
                                            <input name="cvv" type="text" id="typeExp" class="form-control form-control-lg" placeholder="&#9679;&#9679;&#9679;"
                                                   size="3" id="exp" minlength="3" maxlength="3" />

                                        </div>

                                    </div>



                                  




                                  





                                </div>



                                <div class="align-items-center d-flex">
                                    <button type="submit" class="btn btn-primary ms-auto text-center mt-3">
                                        Place Order
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script>
       
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
    </script>
</body>

</html>