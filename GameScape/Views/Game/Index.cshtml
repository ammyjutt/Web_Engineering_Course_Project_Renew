@model List<Product>



<section id="thumbnail-section" class="mt-0">
    <div id="thumbdiv">
        <div id="carouselExampleCaptions"
             class="carousel slide"
             data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button"
                        data-bs-target="#carouselExampleCaptions"
                        data-bs-slide-to="0"
                        class="active"
                        aria-current="true"
                        aria-label="Slide 1"></button>
                <button type="button"
                        data-bs-target="#carouselExampleCaptions"
                        data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                <button type="button"
                        data-bs-target="#carouselExampleCaptions"
                        data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
            </div>
            <div id="first-car-inner" class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/pics/Xbox Games _ Xbox/gamethumb2.png"
                         class="d-block w-100"
                         alt="..." />
                    <div class="carousel-caption d-none d-md-block text-left">
                        <h5>All in one place for gamers</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/pics/Xbox Games _ Xbox/gamethumbone.png"
                         class="d-block w-100 img-fluid"
                         alt="..." />
                    <div class="carousel-caption d-none d-md-block">
                        <h5>All in One place for gamers</h5>

                    </div>
                </div>
            </div>
            <button class="carousel-control-prev"
                    type="button"
                    data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next"
                    type="button"
                    data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

<section id="genre-section">
    <div class="container-fluid">
        <div id="genre-header-row" class="row mb-4">
            <div class="col text-center">
                <div class="h2">
                    Find By <span style="color: rgb(6, 173, 6)">Genre</span>
                </div>
            </div>
        </div>

        <div class="row genrerow flex-wrap justify-content-center">
            <div class="col-md-2 col-sm-5 genrecol text-center">
                <a href="/home/ActionPage">
                    <div id="genrebox">
                        <button type="button" class="btn">
                            <i class="fa-icon fa-solid fa-gun fa-xl"></i>
                        </button>
                        <h6>Shooting</h6>
                    </div>
                </a>
            </div>

            <div class="col-md-2 col-sm-5 genrecol text-center">
                <a href="/home/sportspage">
                    <div id="genrebox">
                        <button type="button" class="btn">
                            <i class="fa-icon fa-solid fa-baseball-bat-ball fa-xl"></i>
                        </button>
                        <h6>Sports</h6>
                    </div>
                </a>
            </div>

            <div class="col-md-2 col-sm-5 genrecol text-center">
                <a href="/home/racingpage">
                    <div id="genrebox">
                        <button type="button" class="btn">
                            <i class="fa-icon fa-solid fa-car fa-xl"></i>
                        </button>
                        <h6>Racing</h6>
                    </div>
                </a>
            </div>

            <div class="col-md-2 col-sm-5 genrecol text-center">
                <a href="/home/racingpage">
                    <div id="genrebox">
                        <button type="button" class="btn">
                            <i class="fa-icon fa-solid fa-chess fa-xl"></i>
                        </button>
                        <h6>Strategy</h6>
                    </div>
                </a>
            </div>
        </div>

        <div class="row genrerow flex-wrap justify-content-center">
            <div class="col-md-2 col-sm-5 genrecol text-center">
                <a href="/home/multiplayerpage">
                    <div id="genrebox">
                        <button type="button" class="btn">
                            <i class="fa-icon fa-solid fa-gamepad fa-xl"></i>
                        </button>
                        <h6>Multiplayer</h6>
                    </div>
                </a>
            </div>

            <div class="col-md-2 col-sm-5 genrecol text-center">
                <a href="/home/survivalpage">
                    <div id="genrebox">
                        <button type="button" class="btn">
                            <i class="fa-icon fa-regular fa-heart fa-xl"></i>
                        </button>
                        <h6>Survival</h6>
                    </div>
                </a>
            </div>

            <div class="col-md-2 col-sm-5 genrecol text-center">
                <a href="/home/puzzlepage">
                    <div id="genrebox">
                        <button type="button" class="btn">
                            <i class="fa-icon fa-solid fa-puzzle-piece fa-xl"></i>
                        </button>
                        <h6>Puzzle</h6>
                    </div>
                </a>
            </div>

            <div class="col-md-2 col-sm-5 genrecol text-center">
                <a href="/home/kidspage">
                    <div id="genrebox">
                        <button type="button" class="btn">
                            <i class="fa-icon fa-solid fa-child fa-xl"></i>
                        </button>
                        <h6>Kids</h6>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<section id="my-cards-section">


    <div class="container">
        <div class="row header">
            <div class="col text-center">
                <div class="h1 mb-5">
                    <span style="color: green"> Trending </span> these days !
                </div>
            </div>
        </div>
    </div>


    <partial name="_ShowProductRow" model="Model" />


</section>

<section id="my-cards-section">

    <div class="container">
        <div class="row header">
            <div class="col text-center">
                <div class="h1 mb-5">
                    Top From Genre<span style="color: green"> Action </span>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
        @for (int i = Model.Count - 1; i >= 0; i--)
        {

            <div class="col-3">
                <a asp-action="ShowSpecificProduct" asp-route-id="@Model[i].Id">

                    <div class="mycard text-center">
                        <div class="card-img-div">
                            <img src="@Url.Content(Model[i].CoverPhotoPath)"
                                 class="img-fluid card-img"
                                 alt="" />
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@Model[i].GameTitle</h5>
                            <button type="button" class="btn btn-success">
                                <i class="fa-solid fa-lg fa-dollar-sign"></i> @Model[i].Price
                            </button>


                            <a href="#" class="btn btn-secondary card-cart-button">
                                <i class="fa-regular fa-heart"></i>
                            </a>
                            <a href="#" class="btn btn-secondary">
                                <i class="fa-solid fa-cart-shopping"></i>
                            </a>
                        </div>
                    </div>
                </a>
            </div>

        }

        </div>


    
    </div>




</section>

<section id="my-cards-section">

    <div class="container">
        <div class="row header">
            <div class="col text-center">
                <div class="h1 mb-5">
                    Top from genre <span style="color: green"> Shooting </span>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">

            @foreach (var p in Model)
            {

                <div class="col-3">
                    <a asp-action="SpecificGame" asp-route-id="@p.Id">

                        <div class="mycard text-center">
                            <div class="card-img-div">
                                <img src="@Url.Content(p.CoverPhotoPath)"
                                     class="img-fluid card-img"
                                     alt="" />
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@p.GameTitle</h5>
                                <button type="button" class="btn btn-success">
                                    <i class="fa-solid fa-lg fa-dollar-sign"></i> @p.Price
                                </button>
                                <a href="" class="btn btn-secondary card-cart-button">
                                    <i class="fa-regular fa-heart"></i>
                                </a>
                                <a href="#" class="btn btn-secondary">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </a>
                            </div>
                        </div>
                    </a>
                </div>

            }
        </div>
    </div>


</section>




