
<div id="bigContainer">




@model List<Product>

@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_TableLayout.cshtml";
}

<div class="text-center my-5">
    <h1 style="color:forestgreen; font-weight:700;">GameScape</h1>
</div>


<h3 class="mt-2">All Products</h3>

<style>
    .table {
        border-collapse: collapse;
        width: 100%;
    }

        .table th, .table td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
</style>
<table class="table table-striped table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.GameTitle</td>
                <td>@p.Price</td>
                <td>@p.Quantity</td>
                <td>@p.ProductType</td>
                <td>
                    @* <a class="btn btn-info" asp-action="Details" asp-route-id="@p.Id">Details</a> *@




                    <a style="width:6rem;" class="btn btn-outline-success" onclick="showEditForm(@p.Id)" >Edit</a>


                    <a class="btn btn-danger" asp-action="Remove" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<br />

<br />



<div class="text-center">

    <a class="btn btn-success" asp-action="AddProduct">Add Product</a>


</div>








</div>














<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>




<script>

    function showEditForm(id)
    {

        $.ajax({
            url: "/Product/GetEditPageById", 
            type: "GET", 
            data: { id: id },

            success: function(response){
                $('#bigContainer').html(response);
            }
        });
    }


</script>

